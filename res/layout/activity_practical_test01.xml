<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="ro.pub.cs.systems.pdsd.practicaltest01var04.PracticalTest01" >

   	   <Button
   	       android:id="@+id/sol_button"
   	       android:layout_width="wrap_content"
   	       android:layout_height="wrap_content"
   	       android:layout_below="@+id/do2_button"
   	       android:layout_toLeftOf="@+id/do2_button"
   	       android:text="Sol" />

   	   <Button
   	       android:id="@+id/mi_button"
   	       android:layout_width="wrap_content"
   	       android:layout_height="wrap_content"
   	       android:layout_below="@+id/sol_button"
   	       android:layout_toLeftOf="@+id/sol_button"
   	       android:text="Mi" />

   	   <Button
   	       android:id="@+id/do_button"
   	       android:layout_width="wrap_content"
   	       android:layout_height="wrap_content"
   	       android:layout_alignLeft="@+id/navigate_to_sec_activity"
   	       android:layout_below="@+id/mi_button"
   	       android:text="Do" />

   	   <EditText
   	       android:id="@+id/edit_text"
   	       android:layout_width="wrap_content"
   	       android:layout_height="wrap_content"
   	       android:layout_alignParentTop="true"
   	       android:layout_centerHorizontal="true"
   	       android:layout_marginTop="25dp"
   	       android:clickable="false"
   	       android:ems="13"
   	       android:enabled="false"
   	       android:focusable="false"
   	       android:gravity="center"
   	       android:inputType="number"
   	       android:saveEnabled="false" />

   	   <Button
   	       android:id="@+id/do2_button"
   	       android:layout_width="wrap_content"
   	       android:layout_height="wrap_content"
   	       android:layout_alignRight="@+id/edit_text"
   	       android:layout_below="@+id/edit_text"
   	       android:layout_marginTop="26dp"
   	       android:text="Do&apos;" />

   	   <Button
   	       android:id="@+id/navigate_to_sec_activity"
   	       android:layout_width="wrap_content"
   	       android:layout_height="wrap_content"
   	       android:layout_alignParentBottom="true"
   	       android:layout_alignRight="@+id/do2_button"
   	       android:layout_marginBottom="58dp"
   	       android:text="Navigate to secondary activity" />
	  
</RelativeLayout>
